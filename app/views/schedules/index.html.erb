
<div class="schedule container-fluid w-50">
  <h1>Schedules</h1>
  <p>Find all the schedules! <%= link_to("Create Schedule", new_schedule_path, :class => 'btn btn-danger') %> </p>

  <table class="table table-hover table-bordered">
    <tr class="header thead-dark">
      <th>#</th>
      <th>Trucker id</th>
      <th>Schedule Name</th>
      <th>Date of Delivery </th>
      <th>Action </th>
    </tr>

    <% @schedules.each do |s| %>
      <tr class="schedule-item">
        <td> <%= s.id %> </td>
        <td> <%= s.trucker_id %> </td>
        <td> <%= s.schedule_name %> </td>
        <td> <%= s.delivery_date %></td>
        <td class="actions">
          <%= link_to("Show", schedule_path(s), :class => 'action_show') %>
        </td>
      </tr>
    <% end %>
  </table>
</div>


